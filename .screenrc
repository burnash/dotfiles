caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %c"

screen -t 'vim' 0
stuff vim\012

screen -t 'server' 1
stuff 'script/server'
stuff \012

screen -t 'mysql' 2
stuff 'mysql -u root  --default-character-set=utf8 --sigint-ignore'
stuff \012

screen -t 'routes'
stuff 'rake routes | less'
stuff \012

screen -t 'log-tail'
stuff 'tail -f log/development.log'
stuff \012

select 1
